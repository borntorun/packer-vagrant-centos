{
  "variables": {
    "ssh_name": "vagrant",
    "ssh_pass": "vagrant",
	"iso_url_netinstall": "http://ftp.dei.uc.pt/pub/linux/CentOS/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
	"iso_url_checksum": "96de4f38a2f07da51831153549c8bd0c",
	"ksfile": "devel"
  },
  "builders": [
    {
      "guest_os_type": "RedHat_64",
      "iso_checksum_type": "md5",
      "iso_checksum": "{{user `iso_url_checksum`}}",
      "iso_url": "{{user `iso_url_netinstall`}}",
      "type": "virtualbox-iso",
      "ssh_password": "{{user `ssh_name`}}",
      "ssh_username": "{{user `ssh_pass`}}",
      "ssh_wait_timeout": "50000s",
      "headless": "false",
	  "disk_size": "20000",
	  "guest_additions_mode": "upload",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "http_directory": ".",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-{{user `ksfile`}}.cfg<enter>"
      ],
      "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S /sbin/halt -h -p"
    }
  ], 
  "provisioners": [
    {
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -S sh '{{ .Path }}'"
        }
      },
      "scripts": [
		"vagrantvisudo.sh",
        "vagrant.sh",
		"virtualbox.sh",
		"cleanup.sh"		
      ],
      "type": "shell"
    }    
  ],  
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "centos7-{{user `ksfile`}}-x86_64.box"
    }
  ]
}